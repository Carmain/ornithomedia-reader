{
  "manifest_version": 2,

  "name": "Ornithomedia reader",
  "description": "Change the way to display the articles in ornithomedia",
  "version": "1.0",
  "author": "Martin Billard",

  "permissions": [
    "storage"
  ],

  "background": {
    "scripts": ["js/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["http://www.ornithomedia.com/*/*/*.html"],
      "js": ["js/clean.js"],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_title": "Ornithomedia reader",
    "default_icon": "icons/icon16.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
